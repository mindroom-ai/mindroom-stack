version: 1

formatters:
  precise:
    format: '%(asctime)s - %(name)s - %(lineno)d - %(levelname)s - %(request)s - %(message)s'

handlers:
  console:
    class: logging.StreamHandler
    formatter: precise
    level: INFO
    stream: ext://sys.stdout

loggers:
  synapse.storage.SQL:
    level: INFO

  twisted:
    handlers: [console]
    propagate: false

root:
  level: INFO
  handlers: [console]

disable_existing_loggers: false
