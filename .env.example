# Matrix server name (used for Matrix IDs)
MATRIX_SERVER_NAME=matrix.localhost

# Element homeserver URL (what your browser connects to)
# Use http://<host-ip>:8008 when accessing from another device
ELEMENT_HOMESERVER_URL=http://localhost:8008

# Postgres
POSTGRES_PASSWORD=synapse_password

# AI Provider API Keys (set at least one)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=
OPENROUTER_API_KEY=

# Ollama (optional)
OLLAMA_HOST=http://localhost:11434

# Logging
LOG_LEVEL=INFO
